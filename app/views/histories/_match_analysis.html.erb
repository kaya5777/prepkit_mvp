<%# 相性診断セクション %>
<div class="mb-8 bg-white rounded-xl shadow-sm border border-secondary-200 overflow-hidden">
  <div class="bg-gradient-to-r from-purple-50 to-indigo-50 px-6 py-4 border-b border-secondary-200">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold text-secondary-900 flex items-center gap-2">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        相性診断
      </h2>
      <% if history.match_analyzed? %>
        <%= button_to analyze_match_history_path(history), method: :post, class: "text-sm text-purple-600 hover:text-purple-700 font-medium", data: { turbo: false }, form: { onsubmit: "showMatchAnalysisModal(); return true;" } do %>
          再診断
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="p-6">
    <% if history.match_analyzed? %>
      <!-- AI予測の注意書き -->
      <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm text-blue-700">
            この診断はAIによる予測です。実際の採用判断は企業や状況によって異なります。参考情報としてご活用ください。
          </p>
        </div>
      </div>

      <!-- スコアとランク -->
      <div class="flex items-center justify-center gap-8 mb-8">
        <div class="text-center">
          <% rank_bg = case history.match_rank
             when "S" then "linear-gradient(to bottom right, #facc15, #ca8a04)"
             when "A" then "linear-gradient(to bottom right, #4ade80, #16a34a)"
             when "B" then "linear-gradient(to bottom right, #60a5fa, #2563eb)"
             when "C" then "linear-gradient(to bottom right, #fb923c, #ea580c)"
             else "linear-gradient(to bottom right, #9ca3af, #4b5563)"
             end %>
          <div class="w-20 h-20 rounded-full flex items-center justify-center text-white shadow-lg" style="background: <%= rank_bg %>;">
            <div class="text-4xl font-bold"><%= history.match_rank %></div>
          </div>
        </div>
        <div class="text-left">
          <div class="text-3xl font-bold text-secondary-900 mb-1">
            相性スコア: <%= history.match_score %>点
          </div>
          <div class="text-lg text-secondary-600">
            <%= history.rank_info[:label] %>
          </div>
          <div class="text-sm text-secondary-500 mt-1">
            <%= history.rank_info[:description] %>
          </div>
        </div>
      </div>

      <!-- 概要 -->
      <% if history.match_summary.present? %>
        <div class="mb-6 p-4 bg-secondary-50 rounded-lg">
          <p class="text-secondary-700"><%= history.match_summary %></p>
        </div>
      <% end %>

      <!-- マッチしている点 -->
      <% if history.matching_points.any? %>
        <div class="mb-6">
          <h3 class="text-lg font-bold text-green-700 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            マッチしている点
          </h3>
          <div class="space-y-3">
            <% history.matching_points.each do |point| %>
              <div class="p-4 bg-green-50 border border-green-100 rounded-lg">
                <div class="flex items-start gap-3">
                  <span class="text-green-500 mt-0.5">+</span>
                  <div>
                    <% if point.is_a?(Hash) %>
                      <div class="font-medium text-secondary-800"><%= point["requirement"] || point[:requirement] %></div>
                      <div class="text-sm text-secondary-600 mt-1">
                        あなたの経験: <%= point["experience"] || point[:experience] %>
                      </div>
                      <% if (strength = point["strength"] || point[:strength]).present? %>
                        <div class="text-sm text-green-700 mt-1 font-medium">
                          強み: <%= strength %>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="text-secondary-700"><%= point %></div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- ギャップがある点 -->
      <% if history.gap_points.any? %>
        <div class="mb-6">
          <h3 class="text-lg font-bold text-amber-700 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            ギャップがある点
          </h3>
          <div class="space-y-3">
            <% history.gap_points.each do |point| %>
              <div class="p-4 bg-amber-50 border border-amber-100 rounded-lg">
                <div class="flex items-start gap-3">
                  <span class="text-amber-500 mt-0.5">!</span>
                  <div>
                    <% if point.is_a?(Hash) %>
                      <div class="font-medium text-secondary-800"><%= point["requirement"] || point[:requirement] %></div>
                      <div class="text-sm text-secondary-600 mt-1">
                        ギャップ: <%= point["gap"] || point[:gap] %>
                      </div>
                      <% if (suggestion = point["suggestion"] || point[:suggestion]).present? %>
                        <div class="text-sm text-amber-700 mt-1 font-medium">
                          対策: <%= suggestion %>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="text-secondary-700"><%= point %></div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- アピールポイント提案 -->
      <% if history.appeal_suggestions.any? %>
        <div class="mb-6">
          <h3 class="text-lg font-bold text-blue-700 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
            </svg>
            面接でアピールすべきポイント
          </h3>
          <ul class="space-y-2">
            <% history.appeal_suggestions.each_with_index do |suggestion, index| %>
              <li class="flex items-start gap-3 p-3 bg-blue-50 rounded-lg">
                <span class="w-6 h-6 bg-blue-100 text-blue-700 rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0">
                  <%= index + 1 %>
                </span>
                <span class="text-secondary-700"><%= suggestion %></span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 面接対策アドバイス -->
      <% if history.interview_tips.any? %>
        <div>
          <h3 class="text-lg font-bold text-purple-700 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
            この求人向けの面接対策
          </h3>
          <ul class="space-y-2">
            <% history.interview_tips.each do |tip| %>
              <li class="flex items-start gap-2 text-secondary-700">
                <span class="text-purple-500 mt-1">*</span>
                <%= tip %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <% else %>
      <!-- 未診断状態 -->
      <div class="text-center py-8">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-secondary-900 mb-2">相性診断を実行しましょう</h3>
        <p class="text-secondary-600 mb-6">
          あなたの職務経歴書とこの求人の相性を<br>AIが分析します
        </p>

        <% if current_user.latest_analyzed_resume %>
          <%= form_with url: analyze_match_history_path(history), method: :post, local: true, data: { turbo: false }, html: { id: "match-analysis-form", onsubmit: "showMatchAnalysisModal(); return true;" } do %>
            <button type="submit" style="background: linear-gradient(to right, #8b5cf6, #4f46e5);" class="inline-flex items-center px-6 py-3 rounded-xl font-bold text-white transition-all shadow-lg hover:shadow-xl">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              相性診断をしてみよう
            </button>
          <% end %>
        <% else %>
          <p class="text-amber-600 mb-4">
            <svg class="w-5 h-5 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            先に職務経歴書をアップロードしてください
          </p>
          <%= link_to new_resume_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-xl font-bold text-white transition-all elevation-2 hover:elevation-3" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            職務経歴書をアップロード
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- ローディングモーダル -->
<div id="matchAnalysisModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl elevation-4 max-w-md w-full p-8 text-center">
    <div class="mb-6">
      <div class="w-20 h-20 mx-auto bg-gradient-to-r from-purple-100 to-indigo-100 rounded-full flex items-center justify-center animate-pulse">
        <svg class="w-10 h-10 text-purple-600 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </div>
    <h3 class="text-xl font-bold text-secondary-900 mb-2">相性を診断中...</h3>
    <p class="text-secondary-600 mb-6">AIが職務経歴書と求人票を分析しています</p>

    <div class="space-y-3">
      <div id="match-step-1" class="flex items-center gap-3 p-3 bg-secondary-50 rounded-lg text-left">
        <div class="w-6 h-6 rounded-full bg-purple-500 flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-white animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <span class="text-sm text-secondary-700">職務経歴書を読み込み中...</span>
      </div>
      <div id="match-step-2" class="flex items-center gap-3 p-3 bg-secondary-50 rounded-lg text-left opacity-50">
        <div class="w-6 h-6 rounded-full bg-secondary-300 flex items-center justify-center flex-shrink-0">
          <span class="text-xs text-white font-bold">2</span>
        </div>
        <span class="text-sm text-secondary-500">求人要件を抽出中...</span>
      </div>
      <div id="match-step-3" class="flex items-center gap-3 p-3 bg-secondary-50 rounded-lg text-left opacity-50">
        <div class="w-6 h-6 rounded-full bg-secondary-300 flex items-center justify-center flex-shrink-0">
          <span class="text-xs text-white font-bold">3</span>
        </div>
        <span class="text-sm text-secondary-500">マッチング分析中...</span>
      </div>
      <div id="match-step-4" class="flex items-center gap-3 p-3 bg-secondary-50 rounded-lg text-left opacity-50">
        <div class="w-6 h-6 rounded-full bg-secondary-300 flex items-center justify-center flex-shrink-0">
          <span class="text-xs text-white font-bold">4</span>
        </div>
        <span class="text-sm text-secondary-500">診断結果を生成中...</span>
      </div>
    </div>
  </div>
</div>

<script>
  function showMatchAnalysisModal() {
    const modal = document.getElementById('matchAnalysisModal');
    modal.classList.remove('hidden');

    // ステップアニメーション
    const steps = [
      { id: 'match-step-1', text: '職務経歴書を読み込み中...' },
      { id: 'match-step-2', text: '求人要件を抽出中...' },
      { id: 'match-step-3', text: 'マッチング分析中...' },
      { id: 'match-step-4', text: '診断結果を生成中...' }
    ];

    let currentStep = 0;

    function updateStep() {
      if (currentStep > 0 && currentStep <= steps.length) {
        // 前のステップを完了状態に
        const prevStep = document.getElementById(steps[currentStep - 1].id);
        prevStep.classList.remove('opacity-50');
        prevStep.innerHTML = `
          <div class="w-6 h-6 rounded-full bg-green-500 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-sm text-secondary-700">${steps[currentStep - 1].text.replace('...', ' 完了')}</span>
        `;
      }

      if (currentStep < steps.length) {
        // 現在のステップをアクティブに
        const step = document.getElementById(steps[currentStep].id);
        step.classList.remove('opacity-50');
        step.innerHTML = `
          <div class="w-6 h-6 rounded-full bg-purple-500 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-white animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <span class="text-sm text-secondary-700">${steps[currentStep].text}</span>
        `;

        currentStep++;
        setTimeout(updateStep, 2000);
      }
    }

    setTimeout(updateStep, 2000);
  }
</script>
