<div class="max-w-5xl">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-3xl font-bold text-secondary-900 mb-2">
          <%= @presenter.display_company_name %>
        </h1>
        <p class="text-sm text-secondary-500">
          登録日: <%= @presenter.formatted_asked_at %>
        </p>
      </div>
      <% if can_edit_history?(@history) %>
        <div class="flex gap-3">
          <%= link_to edit_history_path(@history), class: "inline-flex items-center px-4 py-2 bg-white border-2 border-secondary-300 rounded-xl font-medium text-secondary-700 hover:bg-secondary-50 transition-all elevation-1 hover:elevation-2" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            編集
          <% end %>
          <button type="button" onclick="document.getElementById('deleteModal').classList.remove('hidden')" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-xl font-bold text-white transition-all elevation-2 hover:elevation-3">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            削除
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl elevation-4 max-w-md w-full p-8 transform transition-all">
      <div class="flex items-center gap-4 mb-6">
        <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold text-secondary-900">履歴を削除</h3>
          <p class="text-sm text-secondary-600 mt-1">この操作は取り消せません</p>
        </div>
      </div>
      <p class="text-secondary-700 mb-6">
        本当にこの履歴を削除しますか？<br>
        <span class="font-semibold text-secondary-900"><%= @presenter.display_company_name %></span> の履歴が完全に削除されます。
      </p>
      <div class="flex gap-3 justify-end">
        <button onclick="document.getElementById('deleteModal').classList.add('hidden')" class="px-6 py-3 bg-secondary-100 hover:bg-secondary-200 rounded-xl font-medium text-secondary-800 transition-colors">
          キャンセル
        </button>
        <%= button_to "削除する", history_path(@history), method: :delete, class: "ripple px-6 py-3 bg-primary-600 hover:bg-primary-700 rounded-xl font-medium text-white transition-all elevation-2 hover:elevation-3" %>
      </div>
    </div>
  </div>

  <!-- Job Description -->
  <% if @history.job_description.present? %>
    <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-bold text-gray-900">求人票</h2>
      </div>
      <div class="p-6">
        <div class="bg-gray-50 p-4 rounded-lg" style="max-height: 360px; overflow-y: auto;">
          <pre class="text-sm text-gray-700 whitespace-pre-wrap break-words font-mono"><%= @history.job_description %></pre>
        </div>
      </div>
    </div>
  <% end %>

  <!-- AI Generated Content -->
  <% if @presenter.valid_json? %>
    <% if @presenter.multi_stage? %>
      <!-- 多段階面接タブ -->
      <div class="mb-8">
        <!-- タブナビゲーション -->
        <div class="bg-white rounded-t-lg shadow-sm border border-secondary-200 border-b-0">
          <div class="flex border-b border-secondary-200">
            <button type="button" onclick="switchTab(1)" id="tab-1" class="flex-1 px-6 py-4 text-center font-semibold transition-all border-b-2 border-primary-500 text-primary-600 bg-primary-50">
              1次面接（現場クラス）
            </button>
            <button type="button" onclick="switchTab(2)" id="tab-2" class="flex-1 px-6 py-4 text-center font-semibold transition-all border-b-2 border-transparent text-secondary-600 hover:bg-secondary-50">
              2次面接（マネージャークラス）
            </button>
            <button type="button" onclick="switchTab(3)" id="tab-3" class="flex-1 px-6 py-4 text-center font-semibold transition-all border-b-2 border-transparent text-secondary-600 hover:bg-secondary-50">
              3次面接（社長・役員クラス）
            </button>
          </div>
        </div>

        <!-- タブコンテンツ -->
        <div id="content-1" class="tab-content">
          <%= render "histories/question_list", questions: @presenter.questions(1), history: @history, stage: 1 if @presenter.has_questions?(1) %>
          <%= render "histories/star_answers", star_answers: @presenter.star_answers(1), stage: 1 if @presenter.has_star_answers?(1) %>
          <%= render "histories/reverse_questions", reverse_questions: @presenter.reverse_questions(1), stage: 1 if @presenter.has_reverse_questions?(1) %>
          <%= render "histories/tech_checklist", tech_checklist: @presenter.tech_checklist(1), stage: 1 if @presenter.has_tech_checklist?(1) %>

          <!-- Stage 1 Memo -->
          <% if can_edit_history?(@history) && @presenter.has_stage_memo?(1) %>
            <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="bg-yellow-50 px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-900">メモ</h2>
              </div>
              <div class="p-6">
                <div class="text-gray-700 whitespace-pre-wrap"><%= simple_format(@presenter.stage_memo(1)) %></div>
              </div>
            </div>
          <% end %>
        </div>

        <div id="content-2" class="tab-content hidden">
          <%= render "histories/question_list", questions: @presenter.questions(2), history: @history, stage: 2 if @presenter.has_questions?(2) %>
          <%= render "histories/star_answers", star_answers: @presenter.star_answers(2), stage: 2 if @presenter.has_star_answers?(2) %>
          <%= render "histories/reverse_questions", reverse_questions: @presenter.reverse_questions(2), stage: 2 if @presenter.has_reverse_questions?(2) %>
          <%= render "histories/tech_checklist", tech_checklist: @presenter.tech_checklist(2), stage: 2 if @presenter.has_tech_checklist?(2) %>

          <!-- Stage 2 Memo -->
          <% if can_edit_history?(@history) && @presenter.has_stage_memo?(2) %>
            <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="bg-yellow-50 px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-900">メモ</h2>
              </div>
              <div class="p-6">
                <div class="text-gray-700 whitespace-pre-wrap"><%= simple_format(@presenter.stage_memo(2)) %></div>
              </div>
            </div>
          <% end %>
        </div>

        <div id="content-3" class="tab-content hidden">
          <%= render "histories/question_list", questions: @presenter.questions(3), history: @history, stage: 3 if @presenter.has_questions?(3) %>
          <%= render "histories/star_answers", star_answers: @presenter.star_answers(3), stage: 3 if @presenter.has_star_answers?(3) %>
          <%= render "histories/reverse_questions", reverse_questions: @presenter.reverse_questions(3), stage: 3 if @presenter.has_reverse_questions?(3) %>
          <%= render "histories/tech_checklist", tech_checklist: @presenter.tech_checklist(3), stage: 3 if @presenter.has_tech_checklist?(3) %>

          <!-- Stage 3 Memo -->
          <% if can_edit_history?(@history) && @presenter.has_stage_memo?(3) %>
            <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="bg-yellow-50 px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-900">メモ</h2>
              </div>
              <div class="p-6">
                <div class="text-gray-700 whitespace-pre-wrap"><%= simple_format(@presenter.stage_memo(3)) %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <script>
        function switchTab(tabNumber) {
          // 全てのタブボタンを非アクティブに
          for (let i = 1; i <= 3; i++) {
            const tab = document.getElementById(`tab-${i}`);
            const content = document.getElementById(`content-${i}`);

            if (i === tabNumber) {
              // アクティブなタブ
              tab.classList.add('border-primary-500', 'text-primary-600', 'bg-primary-50');
              tab.classList.remove('border-transparent', 'text-secondary-600');
              content.classList.remove('hidden');
            } else {
              // 非アクティブなタブ
              tab.classList.remove('border-primary-500', 'text-primary-600', 'bg-primary-50');
              tab.classList.add('border-transparent', 'text-secondary-600');
              content.classList.add('hidden');
            }
          }
        }
      </script>
    <% else %>
      <!-- 従来の単一データ表示 -->
      <%= render "histories/question_list", questions: @presenter.questions, history: @history if @presenter.has_questions? %>
      <%= render "histories/star_answers", star_answers: @presenter.star_answers if @presenter.has_star_answers? %>
      <%= render "histories/reverse_questions", reverse_questions: @presenter.reverse_questions if @presenter.has_reverse_questions? %>
      <%= render "histories/tech_checklist", tech_checklist: @presenter.tech_checklist if @presenter.has_tech_checklist? %>
    <% end %>
  <% else %>
    <!-- Fallback for non-JSON content -->
    <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <pre class="bg-gray-50 p-4 rounded-lg text-sm text-gray-700 whitespace-pre-wrap break-words"><%= @presenter.content %></pre>
    </div>
  <% end %>

  <!-- 相性診断セクション -->
  <% if can_edit_history?(@history) %>
    <%= render "histories/match_analysis", history: @history %>
  <% end %>

  <!-- Memo Section -->
  <% if can_edit_history?(@history) %>
    <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-yellow-50 px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900">メモ</h2>
      </div>
      <div class="p-6">
        <% if @history.memo.present? %>
          <div class="text-gray-700 whitespace-pre-wrap"><%= simple_format(@history.memo) %></div>
        <% else %>
          <p class="text-gray-500 italic">メモはありません</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
