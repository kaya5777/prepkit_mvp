    </div>
    <div class="flex gap-3">
      <%= star_label("T", "text-secondary-600") %>
      <span class="text-secondary-700"><%= star['task'] || star[:task] %></span>
    </div>
    <div class="flex gap-3">
      <%= star_label("A", "text-primary-500") %>
      <span class="text-secondary-700"><%= star['action'] || star[:action] %></span>
    </div>
    <div class="flex gap-3">
      <%= star_label("R", "text-secondary-700") %>
