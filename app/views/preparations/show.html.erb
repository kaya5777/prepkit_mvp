<div class="max-w-5xl">
  <!-- Success Header -->
  <div class="mb-8 bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 rounded-3xl elevation-4 p-10 text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-5 rounded-full -mr-32 -mt-32"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-white opacity-5 rounded-full -ml-24 -mb-24"></div>
    <div class="relative z-10">
      <div class="flex items-center gap-4 mb-3">
        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h1 class="text-4xl font-bold">面接対策ノートが完成しました！</h1>
      </div>
      <p class="text-primary-50 text-lg ml-16">AIが生成した想定質問と回答例を確認して、面接対策を始めましょう</p>
    </div>
  </div>

  <!-- Questions Section -->
  <div class="mb-8 bg-white rounded-lg shadow-sm border border-secondary-200 overflow-hidden">
    <div class="bg-gradient-to-r from-primary-50 to-primary-100 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h2 class="text-xl font-bold text-gray-900">想定質問リスト</h2>
      </div>
    </div>
    <div class="p-6">
      <% if @result[:questions]&.any? %>
        <ul class="space-y-3">
          <% @result[:questions]&.each_with_index do |q, index| %>
            <li class="flex gap-3 p-4 bg-secondary-50 rounded-lg">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center font-semibold text-sm">
                <%= index + 1 %>
              </span>
              <span class="flex-1 text-secondary-800"><%= q %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-center py-8">質問はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- STAR Answers Section -->
  <div class="mb-8 bg-white rounded-lg shadow-sm border border-secondary-200 overflow-hidden">
    <div class="bg-gradient-to-r from-primary-50 to-secondary-50 px-6 py-4 border-b border-gray-200">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
        <h2 class="text-xl font-bold text-gray-900">STAR回答例</h2>
      </div>
    </div>
    <div class="p-6 space-y-6">
      <% if @result[:star_answers]&.any? %>
        <% @result[:star_answers].each_with_index do |star, index| %>
          <div class="border border-secondary-200 rounded-lg p-6 bg-gradient-to-br from-white to-secondary-50">
            <div class="font-semibold text-lg text-secondary-900 mb-4">
              <span class="text-primary-600">#<%= index + 1 %></span> <%= star[:question] %>
            </div>
            <div class="space-y-3 ml-6">
              <div class="flex gap-3">
                <span class="font-bold text-primary-600 w-20 flex-shrink-0">S:</span>
                <span class="text-secondary-700"><%= star[:situation] %></span>
              </div>
              <div class="flex gap-3">
                <span class="font-bold text-secondary-600 w-20 flex-shrink-0">T:</span>
                <span class="text-secondary-700"><%= star[:task] %></span>
              </div>
              <div class="flex gap-3">
                <span class="font-bold text-primary-500 w-20 flex-shrink-0">A:</span>
                <span class="text-secondary-700"><%= star[:action] %></span>
              </div>
              <div class="flex gap-3">
                <span class="font-bold text-secondary-700 w-20 flex-shrink-0">R:</span>
                <span class="text-secondary-700"><%= star[:result] %></span>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-center py-4">STAR回答例はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- Reverse Questions Section -->
  <div class="mb-8 bg-white rounded-lg shadow-sm border border-secondary-200 overflow-hidden">
    <div class="bg-gradient-to-r from-secondary-50 to-primary-50 px-6 py-4 border-b border-secondary-200">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        <h2 class="text-xl font-bold text-secondary-900">逆質問リスト</h2>
      </div>
    </div>
    <div class="p-6">
      <% if @result[:reverse_questions]&.any? %>
        <ul class="space-y-3">
          <% @result[:reverse_questions].each do |rq| %>
            <li class="flex gap-3 p-4 bg-secondary-50 rounded-lg hover:bg-primary-50 transition-colors">
              <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="flex-1 text-secondary-800"><%= rq %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-center py-4">逆質問はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- Tech Checklist Section -->
  <div class="mb-8 bg-white rounded-lg shadow-sm border border-secondary-200 overflow-hidden">
    <div class="bg-gradient-to-r from-primary-100 to-secondary-100 px-6 py-4 border-b border-secondary-200">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
        <h2 class="text-xl font-bold text-secondary-900">技術チェックリスト</h2>
      </div>
    </div>
    <div class="p-6">
      <% if @result[:tech_checklist]&.any? %>
        <ul class="space-y-3">
          <% @result[:tech_checklist].each do |tc| %>
            <li class="flex gap-3 p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors">
              <input type="checkbox" class="w-5 h-5 text-primary-600 border-secondary-300 rounded focus:ring-primary-500 flex-shrink-0 mt-0.5 cursor-pointer">
              <span class="flex-1 text-secondary-800"><%= tc %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-center py-4">技術チェックリストはありません。</p>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-4 justify-center">
    <%= link_to root_path, class: "inline-flex items-center px-6 py-3 bg-white border-2 border-secondary-300 rounded-lg font-medium text-secondary-700 hover:bg-secondary-50 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      新しい対策ノートを作成
    <% end %>
  </div>
</div>
