<h1>求人票から面接の想定質問を作る</h1>

<%= form_with url: preparations_path, method: :post, local: true do |f| %>
  <div style="margin-bottom:18px">
    <%= f.label :company_name, '会社名' %><br>
    <%= f.text_field :company_name, placeholder: '例：〇〇株式会社', style: 'width:100%;font-size:1em;padding:8px;box-sizing:border-box;' %>
  </div>
  <div style="width:100%;">
    <%= f.text_area :job_description, rows: 15, placeholder: "ここに求人票を貼り付けてください",
      style: 'width:100%;min-height:500px;max-height:60vh;resize:vertical;font-size:16px;padding:12px;box-sizing:border-box;' %>
  </div>
  <div style="margin-top:14px; text-align:right;">
    <%= f.submit "想定質問を作る", style: 'font-size:1.1em;padding:8px 24px;' %>
  </div>
<% end %>