<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-secondary-900 mb-2">回答を練習</h1>
    <p class="text-secondary-600">質問に対する回答を入力して、AIからフィードバックを受けましょう</p>
  </div>

  <!-- 質問カード -->
  <div class="mb-6 bg-white rounded-lg shadow-sm border border-secondary-200 p-6">
    <div class="mb-4">
      <div class="flex items-center gap-2 mb-3">
        <span class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center font-semibold text-sm">
          <%= @question_index + 1 %>
        </span>
        <h2 class="text-xl font-bold text-secondary-900">質問</h2>
      </div>
      <p class="text-lg text-secondary-800"><%= @question_data[:question] || @question_data["question"] %></p>
    </div>

    <% if (@question_data[:intent] || @question_data["intent"]).present? %>
      <div class="mb-4 p-4 bg-amber-50 border-l-4 border-amber-400 rounded">
        <div class="flex gap-2 items-start">
          <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z"/>
          </svg>
          <div class="flex-1">
            <div class="text-xs font-semibold text-amber-800 mb-1">面接官の意図</div>
            <div class="text-sm text-amber-900"><%= @question_data[:intent] || @question_data["intent"] %></div>
          </div>
        </div>
      </div>
    <% end %>

    <% answer_points = @question_data[:answer_points] || @question_data["answer_points"] %>
    <% if answer_points.present? && answer_points.any? %>
      <div class="p-4 bg-primary-50 rounded">
        <div class="flex gap-2 items-start">
          <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div class="flex-1">
            <div class="text-xs font-semibold text-primary-800 mb-2">回答のポイント</div>
            <ul class="space-y-1.5">
              <% answer_points.each do |point| %>
                <li class="flex gap-2 items-start">
                  <span class="text-primary-600 text-sm flex-shrink-0">•</span>
                  <span class="text-sm text-secondary-700"><%= point %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 回答入力フォーム -->
  <%= form_with model: [@history, @question_answer], local: true, class: "space-y-6", id: "scoring-form" do |f| %>
    <%= f.hidden_field :question_index %>
    <%= f.hidden_field :question_text %>

    <div class="bg-white rounded-lg shadow-sm border border-secondary-200 p-6">
      <div class="mb-4">
        <label class="block text-sm font-bold text-secondary-700 mb-3">あなたの回答を入力してください</label>
        <%= f.text_area :user_answer,
          rows: 12,
          placeholder: "面接官に向けて、実際に話すつもりで回答を書いてみましょう...",
          class: "w-full px-4 py-3 border-2 border-secondary-200 rounded-lg focus:ring-4 focus:ring-primary-100 focus:border-primary-500 transition-all duration-200 resize-y",
          required: true,
          data: { character_counter_target: "textarea" } %>
      </div>

      <div class="flex items-center justify-between text-sm text-secondary-600">
        <span id="characterCount">文字数: 0 / 推奨: 300-500文字</span>
        <span class="text-xs text-secondary-500">※ 具体例を交えて、簡潔に説明しましょう</span>
      </div>
    </div>

    <!-- アクションボタン -->
    <div class="flex gap-4 justify-end">
      <%= link_to "キャンセル", history_path(@history), class: "px-6 py-3 bg-white border-2 border-secondary-300 rounded-lg font-medium text-secondary-700 hover:bg-secondary-50 transition-colors" %>

      <%= button_tag type: "submit", name: "save_only", value: "true", class: "px-6 py-3 bg-secondary-100 hover:bg-secondary-200 rounded-lg font-medium text-secondary-800 transition-colors" do %>
        下書き保存
      <% end %>

      <%= f.submit "採点する", id: "score-button", class: "px-6 py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-bold rounded-lg elevation-2 hover:elevation-3 transition-all cursor-pointer" %>
    </div>
  <% end %>
</div>

<!-- Loading Modal -->
<div id="loadingModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-3xl p-8 max-w-md mx-4 elevation-4">
    <div class="text-center">
      <!-- Spinner -->
      <div class="mb-6 flex justify-center">
        <div class="animate-spin rounded-full h-16 w-16 border-4 border-primary-200 border-t-primary-600"></div>
      </div>

      <!-- Title -->
      <h3 class="text-2xl font-bold text-secondary-900 mb-3">AIが採点中です</h3>

      <!-- Progress Bar -->
      <div class="mb-4">
        <div class="w-full bg-secondary-200 rounded-full h-2 overflow-hidden">
          <div id="progressBar" class="bg-gradient-to-r from-primary-500 to-primary-600 h-2 rounded-full transition-all duration-1000 ease-out" style="width: 0%"></div>
        </div>
        <p class="text-sm text-secondary-600 mt-2">
          <span id="progressText">準備中...</span>
          <span id="progressPercent" class="font-semibold text-primary-600">0%</span>
        </p>
      </div>

      <!-- Progress indicators -->
      <div class="space-y-3 text-sm">
        <div class="flex items-center gap-3 p-2 rounded-lg transition-all duration-300" id="step1">
          <div class="w-6 h-6 rounded-full flex items-center justify-center bg-secondary-200" id="step1-icon">
            <div class="w-2 h-2 bg-secondary-400 rounded-full"></div>
          </div>
          <span class="text-secondary-500" id="step1-text">回答内容を分析中</span>
        </div>
        <div class="flex items-center gap-3 p-2 rounded-lg transition-all duration-300" id="step2">
          <div class="w-6 h-6 rounded-full flex items-center justify-center bg-secondary-200" id="step2-icon">
            <div class="w-2 h-2 bg-secondary-400 rounded-full"></div>
          </div>
          <span class="text-secondary-500" id="step2-text">採点基準と照らし合わせ中</span>
        </div>
        <div class="flex items-center gap-3 p-2 rounded-lg transition-all duration-300" id="step3">
          <div class="w-6 h-6 rounded-full flex items-center justify-center bg-secondary-200" id="step3-icon">
            <div class="w-2 h-2 bg-secondary-400 rounded-full"></div>
          </div>
          <span class="text-secondary-500" id="step3-text">良かった点を抽出中</span>
        </div>
        <div class="flex items-center gap-3 p-2 rounded-lg transition-all duration-300" id="step4">
          <div class="w-6 h-6 rounded-full flex items-center justify-center bg-secondary-200" id="step4-icon">
            <div class="w-2 h-2 bg-secondary-400 rounded-full"></div>
          </div>
          <span class="text-secondary-500" id="step4-text">改善点を特定中</span>
        </div>
      </div>

      <!-- Warning -->
      <div class="mt-6 p-3 bg-primary-50 rounded-xl border border-primary-100">
        <p class="text-xs text-primary-800">※ 処理には10秒〜30秒程度かかる場合があります</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.querySelector('textarea[name="question_answer[user_answer]"]');
    const characterCount = document.getElementById('characterCount');

    if (textarea && characterCount) {
      function updateCount() {
        const count = textarea.value.length;
        characterCount.textContent = `文字数: ${count} / 推奨: 300-500文字`;

        // 色の変更
        if (count < 300) {
          characterCount.classList.remove('text-primary-600', 'text-amber-600');
          characterCount.classList.add('text-secondary-600');
        } else if (count <= 500) {
          characterCount.classList.remove('text-secondary-600', 'text-amber-600');
          characterCount.classList.add('text-primary-600');
        } else {
          characterCount.classList.remove('text-secondary-600', 'text-primary-600');
          characterCount.classList.add('text-amber-600');
        }
      }

      textarea.addEventListener('input', updateCount);
      updateCount(); // 初期表示
    }

    // Loading modal for scoring
    const form = document.getElementById('scoring-form');
    const modal = document.getElementById('loadingModal');
    const progressBar = document.getElementById('progressBar');
    const progressPercent = document.getElementById('progressPercent');
    const progressText = document.getElementById('progressText');
    const scoreButton = document.getElementById('score-button');

    const steps = [
      { id: 1, text: '回答内容を分析中...', duration: 3000, progress: 25 },
      { id: 2, text: '採点基準と照らし合わせ中...', duration: 5000, progress: 50 },
      { id: 3, text: '良かった点を抽出中...', duration: 4000, progress: 75 },
      { id: 4, text: '改善点を特定中...', duration: 3000, progress: 99 }
    ];

    function activateStep(stepId) {
      const step = document.getElementById(`step${stepId}`);
      const icon = document.getElementById(`step${stepId}-icon`);
      const text = document.getElementById(`step${stepId}-text`);

      // アクティブ状態のスタイル
      step.classList.add('bg-primary-50');
      icon.innerHTML = '<div class="w-3 h-3 bg-primary-600 rounded-full animate-pulse"></div>';
      text.classList.remove('text-secondary-500');
      text.classList.add('text-secondary-900', 'font-semibold');
    }

    function completeStep(stepId) {
      const step = document.getElementById(`step${stepId}`);
      const icon = document.getElementById(`step${stepId}-icon`);
      const text = document.getElementById(`step${stepId}-text`);

      // 完了状態のスタイル
      step.classList.remove('bg-primary-50');
      icon.classList.add('bg-primary-500');
      icon.innerHTML = `
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
        </svg>
      `;
      text.classList.remove('font-semibold');
      text.classList.add('line-through', 'text-secondary-400');
    }

    function updateProgress(percent, text) {
      progressBar.style.width = percent + '%';
      progressPercent.textContent = percent + '%';
      progressText.textContent = text;
    }

    form.addEventListener('submit', function(e) {
      // 下書き保存の場合はモーダ��を表示しない
      const saveOnlyButton = e.submitter;
      if (saveOnlyButton && saveOnlyButton.name === 'save_only') {
        return;
      }

      // 採点ボタンが押された場合のみモーダルを表示
      if (e.submitter === scoreButton) {
        modal.classList.remove('hidden');

        let currentStep = 0;

        function processNextStep() {
          if (currentStep > 0) {
            completeStep(currentStep);
          }

          currentStep++;

          if (currentStep <= steps.length) {
            const step = steps[currentStep - 1];
            activateStep(step.id);
            updateProgress(step.progress, step.text);

            setTimeout(processNextStep, step.duration);
          }
        }

        // 最初のステップを開始
        setTimeout(processNextStep, 500);
      }
    });
  });
</script>
