<!DOCTYPE html>
<html>
  <head>
    <title>面接対策ノート</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag "favicon.png" %>
    <%= stylesheet_link_tag "tailwind.css", "data-turbo-track": "reload" %>
  </head>
  <body class="bg-gray-100 font-sans antialiased">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <% if user_signed_in? %>
      <aside class="w-64 bg-white elevation-2 overflow-y-auto md:block hidden border-r border-secondary-100 flex flex-col">
        <div class="p-6 flex-1">
          <%= link_to root_path, class: "flex items-center justify-center mb-8 transition-all duration-200 hover:opacity-80" do %>
            <%= image_tag "logo.png", alt: "面接対策ノート", class: "max-w-full h-auto object-contain" %>
          <% end %>

          <div class="mb-3">
            <h2 class="text-xs font-bold text-secondary-600 uppercase tracking-wider px-3">履歴</h2>
          </div>

          <!-- タブ -->
          <div class="mb-3 px-2">
            <div class="bg-secondary-100 rounded-lg p-1 flex gap-1">
              <button type="button" onclick="switchHistoryTab('my')" id="history-tab-my" class="flex-1 px-3 py-2 text-xs font-semibold rounded-md transition-all bg-white text-primary-600 shadow-sm">
                自分の履歴
              </button>
              <button type="button" onclick="switchHistoryTab('all')" id="history-tab-all" class="flex-1 px-3 py-2 text-xs font-semibold rounded-md transition-all text-secondary-600 hover:text-secondary-900">
                みんなの履歴
              </button>
            </div>
          </div>

          <!-- 自分の履歴 -->
          <ul class="space-y-1 mb-2" id="history-content-my">
            <% @my_sidebar_histories.each do |history| %>
              <li>
                <%= link_to history_path(history), class: "block p-3 rounded-xl hover:bg-primary-50 transition-all duration-200 elevation-hover group" do %>
                  <div class="font-semibold text-secondary-800 group-hover:text-primary-600 transition-colors truncate text-sm">
                    <%= history.company_name.presence || '（会社名なし）' %>
                  </div>
                  <div class="text-xs text-secondary-500 mt-1 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= history.asked_at&.in_time_zone('Asia/Tokyo')&.strftime('%m/%d %H:%M') %>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
          <div class="flex justify-end px-2" id="view-all-my">
            <%= link_to my_histories_histories_path, class: "inline-block p-2 text-xs text-primary-600 hover:text-primary-700 font-semibold hover:bg-primary-50 rounded transition-colors" do %>
              すべてを見る →
            <% end %>
          </div>

          <!-- みんなの履歴 -->
          <ul class="space-y-1 mb-2 hidden" id="history-content-all">
            <% @all_sidebar_histories.each do |history| %>
              <li>
                <%= link_to history_path(history), class: "block p-3 rounded-xl hover:bg-primary-50 transition-all duration-200 elevation-hover group" do %>
                  <div class="font-semibold text-secondary-800 group-hover:text-primary-600 transition-colors truncate text-sm">
                    <%= history.company_name.presence || '（会社名なし）' %>
                  </div>
                  <div class="text-xs text-secondary-500 mt-1 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= history.asked_at&.in_time_zone('Asia/Tokyo')&.strftime('%m/%d %H:%M') %>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
          <div class="flex justify-end px-2 hidden" id="view-all-all">
            <%= link_to all_histories_histories_path, class: "inline-block p-2 text-xs text-primary-600 hover:text-primary-700 font-semibold hover:bg-primary-50 rounded transition-colors" do %>
              すべてを見る →
            <% end %>
          </div>

          <script>
            function switchHistoryTab(type) {
              const myTab = document.getElementById('history-tab-my');
              const allTab = document.getElementById('history-tab-all');
              const myContent = document.getElementById('history-content-my');
              const allContent = document.getElementById('history-content-all');
              const viewAllMy = document.getElementById('view-all-my');
              const viewAllAll = document.getElementById('view-all-all');

              if (type === 'my') {
                myTab.classList.add('bg-white', 'text-primary-600', 'shadow-sm');
                myTab.classList.remove('text-secondary-600', 'hover:text-secondary-900');
                allTab.classList.remove('bg-white', 'text-primary-600', 'shadow-sm');
                allTab.classList.add('text-secondary-600', 'hover:text-secondary-900');
                myContent.classList.remove('hidden');
                allContent.classList.add('hidden');
                viewAllMy.classList.remove('hidden');
                viewAllAll.classList.add('hidden');
              } else {
                allTab.classList.add('bg-white', 'text-primary-600', 'shadow-sm');
                allTab.classList.remove('text-secondary-600', 'hover:text-secondary-900');
                myTab.classList.remove('bg-white', 'text-primary-600', 'shadow-sm');
                myTab.classList.add('text-secondary-600', 'hover:text-secondary-900');
                allContent.classList.remove('hidden');
                myContent.classList.add('hidden');
                viewAllMy.classList.add('hidden');
                viewAllAll.classList.remove('hidden');
              }
            }
          </script>
        </div>

        <!-- User Info at Bottom -->
        <div class="p-4 border-t border-secondary-100">
          <div class="flex items-center gap-3">
            <% if current_user.avatar_url.present? %>
              <%= image_tag current_user.avatar_url, alt: current_user.name, class: "w-8 h-8 rounded-full object-cover" %>
            <% else %>
              <div class="w-8 h-8 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-primary-600 font-semibold text-sm">
                  <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase %>
                </span>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-secondary-800 truncate">
                <%= current_user.name || current_user.email.split('@').first %>
              </div>
              <div class="text-xs text-secondary-500 truncate">
                <%= current_user.email %>
              </div>
            </div>
            <%= button_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-secondary-400 hover:text-secondary-600 transition-colors", title: "ログアウト" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        </div>
      </aside>
      <% end %>

      <!-- Main Content -->
      <div class="flex-1 overflow-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <!-- Flash Messages -->
          <% flash.each do |type, message| %>
            <% css_classes = case type.to_s
              when 'notice' then 'bg-primary-50 text-primary-800 border-primary-200'
              when 'alert' then 'bg-red-50 text-red-800 border-red-200'
              else 'bg-yellow-50 text-yellow-800 border-yellow-200'
            end %>
            <div class="<%= css_classes %> border rounded-lg p-4 mb-6 flex items-start gap-3">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
              <span><%= message %></span>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
