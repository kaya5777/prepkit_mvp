<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-secondary-900 mb-2">職務経歴書の添削</h1>
        <p class="text-secondary-600">AIがあなたの職務経歴書を分析し、改善点を提案します</p>
      </div>
      <%= link_to new_resume_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-xl font-bold text-white transition-all elevation-2 hover:elevation-3" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        新規アップロード
      <% end %>
    </div>
  </div>

  <% if @resumes.any? %>
    <div class="grid gap-6">
      <% @resumes.each do |resume| %>
        <div class="bg-white rounded-xl shadow-sm border border-secondary-200 overflow-hidden hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex items-start justify-between">
              <div class="flex items-center gap-4">
                <!-- ファイルアイコン -->
                <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center">
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>

                <div>
                  <h3 class="text-lg font-bold text-secondary-900">
                    <%= resume.original_file.filename %>
                  </h3>
                  <p class="text-sm text-secondary-500">
                    アップロード日: <%= resume.created_at.strftime('%Y年%m月%d日 %H:%M') %>
                  </p>

                  <!-- ステータス表示 -->
                  <div class="mt-2">
                    <% case resume.status %>
                    <% when "analyzed" %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        分析完了
                      </span>
                    <% when "analyzing" %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <svg class="w-3 h-3 mr-1 animate-spin" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        分析中...
                      </span>
                    <% when "error" %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        エラー
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        下書き
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- スコア表示（分析完了時） -->
              <% if resume.analyzed? && resume.overall_score %>
                <div class="text-center">
                  <div class="w-20 h-20 rounded-full <%= resume.overall_score >= 80 ? 'bg-gradient-to-br from-green-400 to-green-600' : resume.overall_score >= 60 ? 'bg-gradient-to-br from-blue-400 to-blue-600' : 'bg-gradient-to-br from-amber-400 to-amber-600' %> flex flex-col items-center justify-center text-white shadow-lg">
                    <div class="text-2xl font-bold"><%= resume.overall_score %></div>
                    <div class="text-xs">点</div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- カテゴリ別スコア（分析完了時） -->
            <% if resume.analyzed? %>
              <div class="mt-4 pt-4 border-t border-secondary-100">
                <div class="grid grid-cols-4 gap-4">
                  <% resume.resume_analyses.each do |analysis| %>
                    <div class="text-center">
                      <div class="text-xs text-secondary-500 mb-1"><%= analysis.category_name %></div>
                      <div class="text-lg font-bold <%= analysis.score >= 80 ? 'text-green-600' : analysis.score >= 60 ? 'text-blue-600' : 'text-amber-600' %>">
                        <%= analysis.score %>点
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- アクションボタン -->
            <div class="mt-4 pt-4 border-t border-secondary-100 flex items-center justify-between">
              <% if resume.analyzed? %>
                <%= link_to resume_path(resume), class: "inline-flex items-center px-4 py-2 bg-primary-50 hover:bg-primary-100 rounded-lg text-primary-700 font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  詳細を見る
                <% end %>
              <% else %>
                <span class="text-sm text-secondary-500">分析が完了するとレポートを確認できます</span>
              <% end %>

              <%= button_to resume_path(resume), method: :delete, data: { turbo_confirm: "この職務経歴書を削除しますか？" }, class: "inline-flex items-center px-3 py-2 text-secondary-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 空状態 -->
    <div class="bg-white rounded-xl shadow-sm border border-secondary-200 p-12 text-center">
      <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-secondary-900 mb-2">職務経歴書をアップロードしましょう</h3>
      <p class="text-secondary-600 mb-6">AIがあなたの職務経歴書を分析し、<br>改善点と具体的なアドバイスを提供します</p>
      <%= link_to new_resume_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-xl font-bold text-white transition-all elevation-2 hover:elevation-3" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        アップロードする
      <% end %>
    </div>
  <% end %>
</div>
